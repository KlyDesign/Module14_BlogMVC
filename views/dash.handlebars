
<div class="container-fluid mx-auto">
    <div class="row mb-2">
        <div class="col-12 bg-success">
            <h1 class="text-center text-white">Dashboard</h1>
        </div>
    </div>
    <div class = "row justify-content-between">
        <div class = "col-6">
            <h1>Your Posts:</h1>
        </div>
        <div  class = "col-1">
            <a href="/dashboard/newPost"type="button" class="btn btn-success btn-lg">NEW POST</a>
        </div>
    </div>
    <div class = "row justify-content-center text-center">
        {{#each posts as |post|}}
        {{> dashPost post}}
            <div class="d-grid">
                <a href="/dashboard/{{post.id}}"  class="m-2 btn btn-success" type="button">EDIT POST</a>
            </div>  
    </div>
    {{/each}}
    </div>
</div>
<script src="../editPost.js"></script>