
<div class="container-fluid mx-auto">
    <div class="row mb-2">
        <div class="col-12 bg-success">
            <h1 class="text-center text-white">{{name}}'s New Post</h1>
        </div>
        <h1>
            Create a Blog Post:
        </h1>
    </div>
        <form id="PostForm" class="d-flex-block mx-auto m-3 col-6">
            <div class="form-group p-3">
                <label class="display-6" for="title-area">Title: </label>
                </br>
                <textarea type="text" class="form-control-lg w-100" id="title-area" placeholder="Example Title"></textarea>
            </div>
            <div class="form-group p-3">
                <label class="display-6" for="content-area">Content:</label>
                <textarea class="form-control" id="content-area" rows="5"></textarea>
            </div>
            <button type="submit" class="w-100 btn btn-success">Submit Post</button>
        </form>
    </div>  
</div>
<script src="../dashboard.js"</script>