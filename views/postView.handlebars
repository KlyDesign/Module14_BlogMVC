<div class="container-fluid mx-auto">
  <div class="row mb-2">
    <div class="col-12 bg-success">
      <h1 class="text-center text-white"><b>{{title}} </b>by <b>{{user.name}}</b></h1>
    </div>
    <h1>
    </h1>
  </div>
  <div class="row justify-content-center m-5 text-center">
    <div class="card border border-secondary col-8">
      <h5 class="card-header m-1 bg-secondary text-white fs-1">{{title}}</h5>
      <div class="card-body">
        <p class="card-text">{{description}}</p>
        <br>
        <p>Created by <b>{{user.name}}</b> on <b>{{format_date date_created}}</b></p>
        <div>
          
        </div>
        <div class="row justify-content-center text-center">
          {{#if comments}}
          {{#each comments as |comment|}}
          {{> commentView comment}}
          {{/each}}
          {{/if}}
          <div id="commentForm" class="form-group p-3">
            <label class="display-6" for="content-area">COMMENT:</label>
            <textarea class="form-control" id="comment-text" rows="5"></textarea>
            <br>
            <button id="commentButton" class="col-2  m-2 btn btn-success">CREATE COMMENT</button>
          </div>
          <button id="showCommentForm" class="col-2 m-2 btn btn-success">NEW COMMENT</button>
    </div>
          <a href="/dashboard/view" class="col-2 m-2 btn btn-success">DASHBOARD</a>
          <a href="/" class="col-2  m-2 btn btn-success">HOME</a>
        </div>
      </div>
    </div>
  </div>

  <script src="../commentPost.js"></script>