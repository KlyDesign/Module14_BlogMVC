<div class="card mb-2">
    <div class="card-header">
        <div class="d-grid">
            <a href="/dashboard/post/{{id}}" class="btn btn-secondary text-white m-1 fs-1" type="button" style="text-decoration:none">{{title}}</a>
            <p class="card-text"> Created By <b>{{user.name}} </b> on {{format_date date_created}}</p>
        </div>
    </div>
    <div class="card-body">
        <p class="card-text">{{description}}</p>
        
        <div class="mx-auto m-2">
    </div>   
</div>

